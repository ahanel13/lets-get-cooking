<form action="/ingredients" accept-charset="UTF-8" method="post">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="field">
    <label for="ingredient_name">Name</label>
    <input type="text" name="ingredient[name]" id="ingredient_name">
  </div>

  <div class="field">
    <label for="ingredient_description">Description</label>
    <input type="text" name="ingredient[description]" id="ingredient_description">
  </div>

  <div class="actions">
    <input type="submit" name="commit" value="Create Ingredient" data-disable-with="Create Ingredient">
  </div>
</form>