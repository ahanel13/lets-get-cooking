<form action="/recipes" enctype="multipart/form-data" accept-charset="UTF-8" method="post">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="field">
    <label for="recipe_name">Name</label>
    <input type="text" name="recipe[name]" id="recipe_name" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
  </div>

  <div class="field">
    <label for="recipe_preptime">Preptime</label>
    <input type="text" name="recipe[preptime]" id="recipe_preptime">
  </div>

  <div class="field">
    <label for="recipe_cooktime">Cooktime</label>
    <input type="text" name="recipe[cooktime]" id="recipe_cooktime">
  </div>

  <div class="field">
    <label for="recipe_serving">Serving</label>
    <input type="text" name="recipe[serving]" id="recipe_serving">
  </div>

  <div class="field">
    <label for="recipe_image">Image</label>
    <input type="file" name="recipe[image]" id="recipe_image" content_type="image">
  </div>

  <div class="field">
    <label for="recipe_description">description</label>
    <input type="textarea" name="recipe[description]" id="recipe_description">
  </div>

  <div class="feild">
    <h3>Instructions</h3>
            <div>
        <a class="add_fields" data-id="24200" data-fields="<div class=&quot;nested-fields&quot;>        <input type=&quot;hidden&quot; value=&quot;false&quot; name=&quot;recipe[steps_attributes][24200][_destroy]&quot; id=&quot;recipe_steps_attributes_24200__destroy&quot; />        <div>            <input type=&quot;text&quot; name=&quot;recipe[steps_attributes][24200][instruction]&quot; id=&quot;recipe_steps_attributes_24200_instruction&quot; />            <a class=&quot;remove_fields&quot; href=&quot;#&quot;>Remove Step</a>        </div></div><!-- nested fields -->" href="#">Add Step</a>
      </div>
      <br>
    </div>

  <div class="actions">
    <input type="submit" name="commit" value="Create Recipe" data-disable-with="Create Recipe">
  </div>
</form>