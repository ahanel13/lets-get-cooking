<h1>Current Pantry</h1>
<div id="CurrentPantry">

</div>
<%= form_tag "/recipes", method: "GET" do %>

  <%= collection_select :search_by_ingredients, :id, Ingredient.all, :id, :name, {} ,{:multiple => true} %>

  <%= label_tag :search_by_name %>
  <%= text_field_tag :search_by_name, params[:search_by_name], autocomplete: "off"%>

  <%= submit_tag "Search" %>
<% end %>

<hr/>
<div id="SearchResults">
    <% @recipes.each do |recipe| %>
      <div class="RecipeCard">
        <%= link_to image_tag(recipe.image), "/recipes/" + recipe.id.to_s %>
        <%= recipe.name %>
        <%= recipe.preptime %>
        <%= recipe.cooktime %>
        <%= recipe.serving %>
      </div>
    <% end %>
