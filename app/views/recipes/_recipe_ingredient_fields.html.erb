<div class="nested-fields">
        <%= f.hidden_field :_destroy %>
        <div>
            <%= f.text_field :quantity, type: "number", placeholder: "Enter quantity" %>

            <% unit_options = options_from_collection_for_select(@units, 'id', 'name') %>
            <%= f.select :unit_id,  unit_options %>

            <% ingredient_options = options_from_collection_for_select(@ingredients, 'id', 'name') %>
            <%= f.select :ingredient_id,  ingredient_options %>

            <%= link_to "Remove Ingredient", '#', class: "remove_fields" %>
        </div>
</div><!-- nested fields -->