<%= javascript_pack_tag 'recipes' %>

<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>

<p>
  <strong>Preptime:</strong>
  <%= @recipe.preptime %>
</p>

<p>
  <strong>Cooktime:</strong>
  <%= @recipe.cooktime %>
</p>

<p>
  <strong>Serving:</strong>
  <%= @recipe.serving %>
</p>

<h3>Instructions</h3>
  <ol>
    <% for @step in @recipe.steps %>
      <li><%= @step.instruction %></li>
    <% end %>
  </ol>

<%# Comment Section %>
<div>
  <h2>Comments<h2>
  
  <%# only signed in users are able to add comments %>
  <% if user_signed_in? %>
    <div>
      <input type="button" id="clear_button" value="Clear" onclick="clearCommentArea()"> 
      <textarea id='comment_textarea' rows=20 cols=90></textarea>
    </div>
  <% else %>
    <p> <%= link_to('Login', new_user_session_path)  %> to comment</p>
  <% end %>

</div>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>