<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>

<p>
  <strong>Preptime:</strong>
  <%= @recipe.preptime %>
</p>

<p>
  <strong>Cooktime:</strong>
  <%= @recipe.cooktime %>
</p>

<p>
  <strong>Serving:</strong>
  <%= @recipe.serving %>
</p>

<h3>Instructions</h3>
  <ol>
    <% for @step in @recipe.steps %>
      <li><%= @step.instruction %></li>
    <% end %>
  </ol>

